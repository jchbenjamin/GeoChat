<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/userEditUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="User"
        />
    
    <EditText
        android:id="@+id/userEditPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/userEditUser"
        android:ems="10"
        android:hint="Pass"
        android:inputType="textPassword" 
        />
      
    <ListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userEditUser"
        android:layout_above="@+id/userEditText"
        android:layout_centerHorizontal="true" >
    </ListView>

   <EditText
        android:id="@id/userEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Chat" >

    </EditText>
  
   <EditText
       android:id="@+id/userEditRad"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_toLeftOf="@+id/sendButton"
       android:hint="!" />
   
    <Button
        android:id="@id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Send"
        android:onClick="pressSendButton" />


</RelativeLayout>